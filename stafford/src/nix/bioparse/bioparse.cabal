                     , transformers
                     , containers
                     , resourcet
                     , lens
                     , classy-prelude
                     , attoparsec
                     , QuickCheck
                     , typelits-witnesses
                     , streaming
                     , streaming-bytestring
                     , streaming-attoparsec
                     , split
                     , bytestring
  -- hs-source-dirs:
  default-language:    Haskell2010
  default-extensions: StrictData

Test-Suite test
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
