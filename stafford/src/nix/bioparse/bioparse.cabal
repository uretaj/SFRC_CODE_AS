  other-extensions:    DeriveGeneric
                     , GeneralizedNewtypeDeriving
                     , NoImplicitPrelude
                     , OverloadedStrings
                     , TypeFamilies
                     , ViewPatterns
                     , DataKinds
                     , DeriveAnyClass
                     , FlexibleContexts
                     , GADTs
                     , ScopedTypeVariables
                     , TypeOperators
                     , UndecidableInstances
